@model BlogProject_UI.Models.VMs.UserProfileViewModel

<div class="container">
    <div class="row">
        <div class="col-lg-8 mt-5">

            <form method="post" asp-action="UserSettings" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="AppUserDTO.UserName" class="form-label">Kullanıcı Adı</label>
                    <input asp-for="AppUserDTO.UserName" class="form-control" />
                    <span asp-validation-for="AppUserDTO.UserName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="AppUserDTO.Email" class="form-label">E-posta</label>
                    <input asp-for="AppUserDTO.Email" class="form-control" />
                    <span asp-validation-for="AppUserDTO.Email" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="AppUserDTO.PhoneNumber" class="form-label">Telefon Numarası</label>
                    <input asp-for="AppUserDTO.PhoneNumber" class="form-control" />
                    <span asp-validation-for="AppUserDTO.PhoneNumber" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Kaydet" class="btn btn-primary" />
                </div>
            </form>

            <hr />

            <!-- Şifre değiştirme formu -->
            <form method="post" asp-action="ChangePassword">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="UserPasswordChangeDTO.CurrentPassword" class="form-label">Mevcut Şifre</label>
                    <input asp-for="UserPasswordChangeDTO.CurrentPassword" type="password" class="form-control" />
                    <span asp-validation-for="UserPasswordChangeDTO.CurrentPassword" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="UserPasswordChangeDTO.NewPassword" class="form-label">Yeni Şifre</label>
                    <input asp-for="UserPasswordChangeDTO.NewPassword" type="password" class="form-control" />
                    <span asp-validation-for="UserPasswordChangeDTO.NewPassword" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="UserPasswordChangeDTO.RepeatPassword" class="form-label">Yeni Şifre Tekrarı</label>
                    <input asp-for="UserPasswordChangeDTO.RepeatPassword" type="password" class="form-control" />
                    <span asp-validation-for="UserPasswordChangeDTO.RepeatPassword" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Şifreyi Güncelle" class="btn btn-warning" />
                </div>
            </form>

        </div>
        <div class="col-lg-4">
            @await Component.InvokeAsync("UserSettingsSidebar")
        </div>
    </div>
</div>