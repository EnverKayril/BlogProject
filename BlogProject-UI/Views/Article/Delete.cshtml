@model BlogProject.SERVICE.DTOs.ArticleDTO

<div class="card mb-4 mt-3">
    <div class="card-header">
        <i class="fas fa-edit me-1"></i>
        Makale Sil
    </div>
    <div class="card-body">
        <h4>Makaleyi silmek istiyor musunuz?</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Title)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Content)
            </dt>
            <dd class="col-sm-10">
                @Html.Raw(Model.Content)
            </dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="submit" value="Sil" class="btn btn-outline-danger" />
            <a asp-controller="AppUser" asp-action="UserArticles" class="btn btn-outline-primary">Listeye Geri Dön</a>
        </form>
    </div>
</div>
