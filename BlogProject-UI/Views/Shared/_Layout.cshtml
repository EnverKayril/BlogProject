<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BlogProject_UI</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="Agency HTML Template">
    <meta name="author" content="Themefisher">
    <meta name="generator" content="Themefisher Classified Marketplace Template v1.0">
    @await Html.PartialAsync("_LayoutBlogCssPartial")
    @RenderSection("Styles", required: false)
    <style>
        a.widget-header {
            text-decoration: none;
        }

        a:hover {
            color: inherit !important;
        }
    </style>
</head>

<body class="body-wrapper">
    <header>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    @await Html.PartialAsync("Components/Navbar")
                </div>
            </div>
        </div>
    </header>

    <div class="container">
        <main role="main" class="row">
            @if (ViewBag.ShowSidebar ?? true)
            {
                <div class="col-lg-8">
                    @RenderBody()
                </div>
                <div class="col-lg-4">
                    @await Component.InvokeAsync("Sidebar")
                </div>
            }
            else
            {
                <div class="col-lg-12">
                    @RenderBody()
                </div>
            }
        </main>
    </div>

    <footer class="py-4 bg-light">
        <div class="container-fluid px-4">
            <div class="d-flex align-items-center justify-content-between small">
                <div class="text-muted">Tüm Hakları Saklıdır. © 2024 Blog Projesi by Enver Kayrıl</div>
                <div>
                    <a asp-controller="Home" asp-action="Index" class="text-muted mx-2">Blog</a>
                    <span class="text-muted">|</span>
                    <a asp-controller="Home" asp-action="About" class="text-muted mx-2">Hakkımızda</a>
                    <span class="text-muted">|</span>
                    <a asp-controller="Home" asp-action="Privacy" class="text-muted mx-2">Gizlilik Politikası</a>
                    <span class="text-muted">|</span>
                    <a asp-controller="Home" asp-action="Terms" class="text-muted mx-2">Kullanım Koşulları</a>
                </div>
            </div>
        </div>
    </footer>
    @await Html.PartialAsync("_LayoutBlogJsPartial")
    @RenderSection("Scripts", required: false)
</body>
</html>