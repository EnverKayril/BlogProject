@model BlogProject_UI.Models.VMs.SidebarViewModel

<div class="sidebar mt-5">
	<div class="widget search p-0">
		<form asp-area="" asp-controller="Home" asp-action="SearchResults" method="get">
			<div class="input-group">
				<input type="text" class="form-control" name="query" placeholder="Bir şeyler arayın...">
				<div class="input-group-append">
					<button class="btn btn-outline-primary" type="submit">
						<i class="fa fa-search"></i>
					</button>
				</div>
			</div>
		</form>
	</div>


	<div class="widget category">
		<a class="widget-header" asp-area="" asp-controller="Home" asp-action="Index"><h5>En Çok Yorum Alan Makaleler</h5></a>
		<ul class="category-list">
			@foreach (var article in Model.MostCommentedArticles)
			{
				<li>
					<a asp-area="" asp-controller="Article" asp-action="Detail" asp-route-id="@article.ArticleId">@article.ShortTitle<span class="float-right"><i class="fa fa-comments-o"></i> @article.CommentCount</span></a>
				</li>
			}
		</ul>
	</div>

	<div class="widget category">
		<a class="widget-header" asp-area="" asp-controller="Category" asp-action="Index"><h5>Kategoriler</h5></a>
		<ul class="category-list">
			@foreach (var category in Model.Categories)
			{
				<li>
					<a asp-area="" asp-controller="Category" asp-action="Detail" asp-route-id="@category.CategoryId">@category.CategoryName <span class="float-right">(@category.ArticleCount)</span></a>
				</li>
			}
		</ul>
	</div>

	<div class="widget category">
		<a class="widget-header" asp-area="" asp-controller="AppUser" asp-action="Index"><h5>Yazarlar</h5></a>
		<ul class="category-list">
			@foreach (var appUser in Model.RandomAppUsers)
			{
				<li>
					<a asp-area="" asp-controller="AppUser" asp-action="Detail" asp-route-id="@appUser.AppUserId">@appUser.AppUserName</a>
				</li>
			}
		</ul>
	</div>

	<div class="widget category">
		<a class="widget-header"><h5>Son Yorumlar</h5></a>
		<ul class="category-list">
			@foreach (var comment in Model.RecentComments)
			{
				<li>
					<a asp-area="" asp-controller="Article" asp-action="Detail" asp-route-id="@comment.ArticleId">@comment.ShortContent</a>
				</li>
			}
		</ul>
	</div>
</div>