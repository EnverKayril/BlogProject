                <a class="nav-link" asp-area="" asp-controller="AppUser" asp-action="Contact">İletişim</a>
            </li>
        </ul>

        <!-- Sağ Taraf: Kullanıcı Durumu -->
        <ul class="navbar-nav ms-auto">
