@model BlogProject.SERVICE.DTOs.CommentDTO

@{
    ViewData["Title"] = "Yorum Sil";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb mb-3 mt-2">
    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Admin</a></li>
    <li class="breadcrumb-item active"><a asp-area="Admin" asp-controller="Comment" asp-action="Index">Yorumlar</a></li>
    <li class="breadcrumb-item active">Sil</li>
</ol>

<div class="card mb-4 mt-3">
    <div class="card-header">
        <i class="fas fa-edit me-1"></i>
        Yorum Sil
    </div>
    <div class="card-body">
        <h4>Yorumu silmek istiyor musunuz?</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Content)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Content)
            </dd>
        </dl>

        <form asp-action="Delete" method="post">
            <input type="submit" value="Sil" class="btn btn-outline-danger" />
            <a asp-controller="AppUser" asp-action="UserComments" class="btn btn-outline-primary">Listeye Geri Dön</a>
        </form>
    </div>
</div>
