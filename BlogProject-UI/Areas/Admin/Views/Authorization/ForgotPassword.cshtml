@model BlogProject.SERVICE.DTOs.ForgotPasswordDTO
@{
    Layout = "_UserLoginLayout";
    ViewBag.Title = "Şifremi Unuttum";
}

<div class="container bg-white">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header">
                    <h3 class="text-center font-weight-light my-4">Şifremi Unuttum</h3>
                </div>
                <div class="card-body">
                    <form asp-controller="Authorization" asp-action="ForgotPassword" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="mb-3">
                            <label class="small mb-1" asp-for="Email"></label>
                            <input class="form-control" asp-for="Email" type="email" placeholder="Lütfen E-Posta adresinizi giriniz." />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                            <button class="btn btn-primary" type="submit">Şifre Sıfırlama Linki Gönder</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
