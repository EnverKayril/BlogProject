@model BlogProject.SERVICE.DTOs.UserLoginDTO
@{
    Layout = "_UserLoginLayout";
    ViewBag.Title = "Giriş Yap";
}

<div class="container bg-white">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header">
                    <h3 class="text-center font-weight-light my-4">Giriş Yap</h3>
                </div>
                <div class="card-body">
                    <form asp-controller="Authorization" asp-action="Login" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="mb-3">
                            <label class="small mb-1" asp-for="Email"></label>
                            <input class="form-control" asp-for="Email" type="email" placeholder="Lütfen E-Posta adresinizi giriniz." />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Password"></label>
                            <input class="form-control" asp-for="Password" type="password" placeholder="Lütfen Şifrenizi giriniz." />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-check mb-3">
                            <input class="form-check-input" asp-for="RememberMe" />
                            <label class="form-check-label" asp-for="RememberMe">Beni Hatırla</label>
                        </div>
                        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                            <a class="btn btn-primary" asp-area="Admin" asp-controller="Authorization" asp-action="ForgotPassword">Şifremi Unuttum</a>
                            <button class="btn btn-primary" type="submit">Giriş Yap</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center py-3">
                    <div class="btn btn-primary">
                        <a class="text-white text-decoration-none" asp-area="Admin" asp-controller="Authorization" asp-action="Register">Kayıt Ol</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
