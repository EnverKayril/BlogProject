@model BlogProject.SERVICE.DTOs.UserPasswordChanceDTO

@{
    ViewData["Title"] = "Şifre Değiştir";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb mb-3 mt-2">
    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Admin</a></li>
    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Authorization" asp-action="Index">Kullanıcılar</a></li>
    <li class="breadcrumb-item active">Şifre Değiştir</li>
</ol>

<div class="card mb-4 mt-3">
    <div class="card-header">
        <i class="fas fa-key me-1"></i>
        Şifre Değiştir
    </div>
    <div class="card-body">
        <form asp-action="PasswordChange" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="CurrentPassword" class="form-label">
                    @Html.DisplayNameFor(model => model.CurrentPassword)
                </label>
                <input asp-for="CurrentPassword" type="password" class="form-control" />
                <span asp-validation-for="CurrentPassword" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="NewPassword" class="form-label">
                    @Html.DisplayNameFor(model => model.NewPassword)
                </label>
                <input asp-for="NewPassword" type="password" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="RepeatPassword" class="form-label">
                    @Html.DisplayNameFor(model => model.RepeatPassword)
                </label>
                <input asp-for="RepeatPassword" type="password" class="form-control" />
                <span asp-validation-for="RepeatPassword" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-danger">İptal</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}