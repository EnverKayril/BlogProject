@model BlogProject.SERVICE.DTOs.CategoryCreateDTO
@{
    ViewData["Title"] = "Kategori Ekle";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb mb-3 mt-2">
    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Admin</a></li>
    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Category" asp-action="Index">Kategoriler</a></li>
    <li class="breadcrumb-item active">Ekle</li>
</ol>

<div class="card mb-4 mt-3">
    <div class="card-header">
        <i class="fas fa-plus me-1"></i>
        Kategori Ekle
    </div>
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <div class="form-group mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <button type="submit" class="btn btn-primary">Ekle</button>
                <a asp-action="Index" class="btn btn-danger">İptal</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
