@model BlogProject.SERVICE.DTOs.AppUserDTO

@{
    ViewData["Title"] = "Kullanıcı Detayı";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb mb-3 mt-2">
    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Admin</a></li>
    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="AppUser" asp-action="Index">Kullanıcılar</a></li>
    <li class="breadcrumb-item active">Detay</li>
</ol>

<div class="card mb-4 mt-3">
    <div class="card-header">
        <i class="fas fa-user me-1"></i>
        Kullanıcı Detayı
    </div>
    <div class="card-body">
        <div class="form-group mb-3">
            <label class="form-label">
                @Html.DisplayNameFor(model => model.UserName)
            </label>
            <p class="form-control-plaintext">
                @Model.UserName
            </p>
        </div>

        <div class="form-group mb-3">
            <label class="form-label">
                @Html.DisplayNameFor(model => model.Email)
            </label>
            <p class="form-control-plaintext">
                @Model.Email
            </p>
        </div>

        <div class="form-group mb-3">
            <label class="form-label">
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </label>
            <p class="form-control-plaintext">
                @Model.PhoneNumber
            </p>
        </div>

        <div class="form-group mb-3">
            <label class="form-label">Fotoğraf:</label><br />
            <img src="~/img/UserImages/@Model.Photo" class="img-fluid img-thumbnail" style="width:300px; height:auto;" alt="@Model.UserName" />
        </div>

        <div class="form-group mt-3">
            <a asp-action="Index" class="btn btn-primary">Geri Dön</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
