@model BlogProject.SERVICE.DTOs.AppUserDTO

@{
    ViewData["Title"] = "Kullanıcı Sil";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb mb-3 mt-2">
    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Admin</a></li>
    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="AppUser" asp-action="Index">Kullanıcılar</a></li>
    <li class="breadcrumb-item active">Sil</li>
</ol>

<div class="card mb-4 mt-3">
    <div class="card-header">
        <i class="fas fa-trash-alt me-1"></i>
        Kullanıcı Sil
    </div>
    <div class="card-body">
        <h4 class="text-danger">Kullanıcıyı silmek istiyor musunuz?</h4>
        <hr />
        <dl class="row mb-3">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Id)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Id)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UserName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UserName)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="submit" value="Sil" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-primary ms-2">Listeye Geri Dön</a>
        </form>
    </div>
</div>
