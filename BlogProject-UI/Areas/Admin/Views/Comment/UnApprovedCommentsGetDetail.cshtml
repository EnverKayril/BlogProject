@model BlogProject.SERVICE.DTOs.CommentWithUserDTO

@{
    ViewData["Title"] = "Yorum Onayla";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb mb-3 mt-2">
    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Admin</a></li>
    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Comment" asp-action="Index">Yorumlar</a></li>
    <li class="breadcrumb-item active">Yorum Onayla</li>
</ol>

<div class="card mb-4 mt-3">
    <div class="card-header">
        <i class="fas fa-comment me-1"></i>
        Yorum Detayları
    </div>
    <div class="card-body">
        <div class="form-group mb-3">
            <label for="articleTitle" class="form-label">Makale Başlığı</label>
            <input type="text" class="form-control" id="articleTitle" value="@Model.ArticleTitle" readonly />
        </div>

        <div class="form-group mb-3">
            <label for="userName" class="form-label">Kullanıcı Adı</label>
            <input type="text" class="form-control" id="userName" value="@Model.UserName" readonly />
        </div>

        <div class="form-group mb-3">
            <label for="commentContent" class="form-label">Yorum İçeriği</label>
            <textarea class="form-control" id="commentContent" rows="4" readonly>@Model.CommentContent</textarea>
        </div>

        <div class="d-flex">
            <form asp-action="UnApprovedCommentsGetDetail" method="post" style="margin-right: 10px;">
                <input type="hidden" name="id" value="@Model.CommentId" />
                <input type="hidden" name="action" value="Onayla" />

                <div class="form-group mb-3">
                    <button type="submit" class="btn btn-outline-primary">Onayla</button>
                </div>
            </form>
            <form asp-action="UnApprovedCommentsGetDetail" method="post">
                <input type="hidden" name="id" value="@Model.CommentId" />
                <input type="hidden" name="action" value="Sil" />
                <div class="form-group mb-3">
                    <button type="submit" class="btn btn-outline-danger">Sil</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
