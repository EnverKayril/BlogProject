@model IEnumerable<BlogProject.SERVICE.DTOs.ArticleWithUserDTO>
@{
    Layout = "_Layout";
    ViewBag.Title = "Makaleler";
}

<ol class="breadcrumb mb-3 mt-2">
    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Admin</a></li>
    <li class="breadcrumb-item active"><a asp-area="Admin" asp-controller="Article" asp-action="Index">Makaleler</a></li>
</ol>
<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        Makaleler
    </div>
    <div class="card-body">
        <a class="btn btn-primary me-0" asp-action="Create">Makale Ekle</a>
        <div class="table-responsive">
            <table class="table table-bordered" id="categoriesTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(Model => Model.CategoryName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(Model => Model.UserName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(Model => Model.Title)
                        </th>
                        <th>
                            @Html.DisplayNameFor(Model => Model.Thumbnail)
                        </th>
                        <th>
                            @Html.DisplayNameFor(Model => Model.Content)
                        </th>
                        <th>
                            @Html.DisplayNameFor(Model => Model.UpdateDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(Model => Model.ViewsCount)
                        </th>
                        <th>
                            @Html.DisplayNameFor(Model => Model.CommentCount)
                        </th>
                        <th>
                            @Html.DisplayNameFor(Model => Model.Status)
                        </th>
                        <th>
                            İşlemler
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var article in Model)
                        {
                            <tr>
                                <td>@article.CategoryName</td>
                                <td>@article.UserName</td>
                                <td>@article.Title</td>
                                <td><img src="~/img/ArticleImages/@article.Thumbnail" class="img-thumbnail" style="width:100px; height:auto; alt="Thumbnail" /></td>
                                <td>@article.Content</td>
                                <td>
                                    @if (article.UpdateDate.HasValue)
                                    {
                                        @article.UpdateDate.Value.ToShortDateString()
                                    }
                                    else
                                    {
                                        @article.CreateDate.ToShortDateString()
                                    }
                                </td>
                                <td>@article.ViewsCount</td>
                                <td>@article.CommentCount</td>
                                <td>@article.Status.ToString()</td>
                                <td>
                                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@article.Id">Düzenle</a> |
                                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@article.Id">Sil</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@section Scripts
{
    <script>
        $(document).ready(function () {
            var table = new DataTable('#categoriesTable', {
                language: {
                    url: '/locales/tr.json'
                }
            });
            console.log($('#categoriesTable').DataTable().settings().init());
        });
    </script>
}