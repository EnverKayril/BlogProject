@model BlogProject.SERVICE.DTOs.ArticleCreateDTO

@{
    ViewData["Title"] = "Makale Ekle";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb mb-3 mt-2">
    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Admin</a></li>
    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Article" asp-action="Index">Makaleler</a></li>
    <li class="breadcrumb-item active">Ekle</li>
</ol>

<div class="card mb-4 mt-3">
    <div class="card-header">
        <i class="fas fa-plus me-1"></i>
        Makale Ekle
    </div>
    <div class="card-body">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label for="CategoryId" class="form-label">Kategori Seçin</label>
                <select id="categoryList" asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryList">
                    <option value="">Kategori Seçiniz</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Title" class="form-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Content" class="form-label"></label>
                <textarea asp-for="Content" class="form-control" id="text-editor"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="PhotoFile" class="form-label"></label>
                <input asp-for="PhotoFile" type="file" class="form-control-file" />
                <span asp-validation-for="PhotoFile" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Ekle" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-danger">İptal</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    <script src="~/js/site.js"></script> 
}
@section Styles {
    <link rel="stylesheet" href="~/css/site.css" />
}