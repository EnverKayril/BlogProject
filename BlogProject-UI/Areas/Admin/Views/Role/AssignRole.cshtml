@model BlogProject_UI.Areas.Admin.Models.VMs.AssignRoleViewModel

@{
    ViewData["Title"] = "Rol Ata";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb mb-3 mt-2">
    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Admin</a></li>
    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="AppUser" asp-action="Index">Kullanıcılar</a></li>
    <li class="breadcrumb-item active">Rol Ata</li>
</ol>

<div class="card mb-4 mt-3">
    <div class="card-header">
        <i class="fas fa-user-tag me-1"></i>
        Rol Ata
    </div>
    <div class="card-body">
        <form asp-action="AssignRole" method="post">
            <input type="hidden" asp-for="UserId" />

            <div class="form-group mb-3">
                <label for="SelectedRole" class="form-label">Rol Seçin:</label>
                <select asp-for="SelectedRole" asp-items="Model.Roles" class="form-control"></select>
            </div>

            <div class="form-group mb-3">
                <button type="submit" class="btn btn-primary">Kaydet</button>
                <a asp-controller="AppUser" asp-action="Index" class="btn btn-danger">İptal</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
